    <%- body %>

  <div class="navbar navbar-default navbar-fixed-top background">
    <div class="container">
      <div class="navbar-header">

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <img class="corner_logo" src="/images/logo_corner_left.png">
        <a class="navbar-brand" href="/">PlayTrade</a>

      </div>
      <div class="navbar-collapse collapse">
        <ul class="navbar-nav">

          <% if(session.authenticated) {%>
            <input class="btn mtop" type="button" value="<%= session.User.firstname%> <%= session.User.lastname%>" 
            onclick="self.location.href='/user/profil/<%= session.User.id %>'">
            <input class="btn mtop" type="button" value="Home" onclick="self.location.href='/user/lahome/<%= session.User.id %>'">
          <%}%>

        </ul>
        <div class="navbar-right">

          <% if(session.authenticated && session.User.admin) {%>
           <input class="btn mtop" type="button" value="User Administration" onclick="self.location.href='/user'">
          <%}%>
          
          <% if(session.authenticated) {%>

           
           <input class="btn mtop" type="button" value="Sign-out" onclick="self.location.href='/session/destroy'">

          <%}%>

        </div>

          <% if(!session.authenticated){ %>

            <form class="navbar-form navbar-right" action="/session/create">
              <div class="form-group">
                <input type="text" placeholder="Pseudo" name="pseudo" class="form-control">
              </div>
              <div class="form-group">
                <input type="password" placeholder="Password" name="password" class="form-control">
              </div>
              <button type="submit" class="btn" >Sign in</button>
              <input type="hidden" name="blop" value="<%= _csrf %>"/>
              <input class="btn" type="button" value="Sign up it's free" onclick="self.location.href='/user/registration'">
            </form>

          <%}%>
          
        </div>
      </div>
    </div>


